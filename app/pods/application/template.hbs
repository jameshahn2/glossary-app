{{!-- The look ahead search begins at line 18 and ends at line 28 --}}

<div class="container mx-auto max-w-xl bg-grey-white xxs:w-95p xsml:w-375 xsm:w-425 smm:w-480 sm:w-600 md:w-768 lg:w-980 md:shadow">

  {{ui-nav}}

</div>

<div class="container lg:mx-auto sm:flex sm:flex-col-reverse smm:flex smm:flex-col-reverse xsm:flex xsm:flex-col-reverse xsml:flex xsml:flex-col-reverse xxs:flex xxs:flex-col-reverse xxs:ml-15 xsml:mt-10 max-w-xl bg-grey-white md:flex md:flex-col-reverse lg:flex-row lg:w-980 md:shadow">

  <div class="vl">
    <div class="xxs:vlx xsml:vlx xsm:vlx smm:vlx sm:vlx p-10">
      <span class="text-base font-bold pb-12">Oilfield Glossary</span>
      <p class="text-blue-light text-sm leading-normal pt-4">
        Search for Term:
      </p>
    </div>
    <input type="text" placeholder="Enter term" oninput={{perform searchGlossary value="target.value"}} class="border ml-10">

    {{#if searchGlossary.isRunning}}
      {{loading-spinner}}
    {{/if}}

    <ul class="md:ml-30m my-5">
      {{#each (take 20 (sort-by "term" searchGlossary.lastSuccessful.value)) as |term|}}
        {{#link-to "terms.letter.term_id" term.letter term.id class="text-blue-light text-sm no-underline"}}{{term.term}}{{/link-to}}<br>
      {{/each}}
    </ul>
    {{ui-sidebar}}
  </div>

  <div class="mb-20 xxs:w-95p mx-auto xxs:mr md:w-700 md:ml-20 md:mt-10">
    {{outlet}}
    {{glossaryData.data.url}}
  </div>
</div>

{{ui-footer}}
