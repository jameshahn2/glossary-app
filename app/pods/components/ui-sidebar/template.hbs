<div class="sm:block xxs:w-320 xsml:w-375 xsm:w-425 smm:w-480 sm:w-600 md:mx-auto lg:w-240">
  <div class="xxs:w-95p md:mx-auto lg:w-240">
    <div class="xxs:vlx xsml:vlx xsm:vlx smm:vlx sm:vlx p-10 vl">
      <p class="text-blue-light text-sm leading-normal pt-4">

      </p>
    </div>
    <div class="xxs:w-320 xsml:w-375 xsm:w-425 smm:w-480 sm:w-600 md:w-240 border-b">
    </div>
  </div>

  <div class="flex">
    <div class="xxs:w-95p md:mx-auto lg:w-240">
      <div class="xxs:vlx p-10 vl">
        <p class="text-blue-light text-sm leading-normal pt-4">
          Search by Discipline
        </p>
        <div class="xxs:w-95p w-220">
          <select onchange={{action "setSelection" value="target.value"}} class="w-136 border border-black font-normal text-sm bg-grey-lightly no-underline">
            <option disabled selected>Select Discipline</option>
            {{#each model.disciplines as |discipline|}}
              <option value={{discipline.group}}>{{group.group}}</option>
            {{/each}}
          </select>


          <button class="border border-black rounded-xl text-sm text-black-darkest pt-2 pr-7 pb-1 pl-7" {{action "submit"}}>
            Go
          </button>
        </div>
      </div>
      <div class="xxs:w-320 xsml:w-375 xsm:w-425 smm:w-480 sm:w-600 md:w-240 border-b">
      </div>
    </div>
  </div>

  <div class="flex">
    <div class="xxs:w-95p md:mx-auto lg:w-240">
      <div class="xxs:vlx p-10 vl">
        <p class="text-blue-light text-sm leading-normal pt-4">
          More search options
        </p>
      </div>
      <div class="xxs:w-320 xsml:w-375 xsm:w-425 smm:w-480 sm:w-600 md:w-240 border-b">
      </div>
    </div>

  </div>

  <div class="flex">
    <div class="xxs:w-95p md:mx-auto lg:w-240">
      <div class="xxs:vlx p-10 vl">
        <p class="text-blue-light text-sm leading-normal pt-4">
          Terms beginning with:
          {{ui-sidetable}}
        </p>
      </div>
      <div class="xxs:w-320 xsml:w-375 xsm:w-425 smm:w-480 sm:w-600 md:w-240 border-b">
      </div>
    </div>
  </div>

  <div class="flex">
    <div class="xxs:w-95p md:mx-auto lg:w-240">
      <div class="xxs:vlx p-10 vl">
        <span class="text-base font-bold pb-3">Resource Links</span>
        <ul class="list-reset">
          <li class="mt-6 leading-normal">
            <a class="text-blue-light text-sm no-underline mt-4 mb-4" href="http://www.slb.com/services.aspx">
              Schlumberger Oilfield Services
            </a>
          </li>
          <li class="leading-normal">
            <a class="text-blue-light text-sm no-underline mt-4 mb-4" href="http://www.slb.com/resources/publications/oilfield_review.aspx">
              Oilfield Review
            </a>
          </li>
          <li class="leading-normal">
            <a class="text-blue-light text-sm no-underline mt-4 mb-4" href="http://www.apps.slb.com/cmd/">
